[h,if(id==""): assert(0,"token "+name+" not found")]

[h:junk="if its a partner, abort"]
[h:allMarkers=GetAllMarkers()]
[h:maps=json.fields(allMarkers)]
[h,foreach(m,maps), code:{
  [markers=GetMapMarkers(m)]
